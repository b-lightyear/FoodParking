<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bottom_round"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/di_title"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 회원이 아니세요?"/>
        <TextView
            android:id="@+id/di_content"
            android:layout_margin="15dp"
            android:textColor="#636262"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인이 필요한 서비스입니다"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_no"
            android:textColor="#020202"
            android:textStyle="bold"
            android:background="@drawable/dialog_bottom_left"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="로그인"/>

        <TextView
            android:background="@drawable/dialog_bottom_right"
            android:id="@+id/btn_cancel"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="취소"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>