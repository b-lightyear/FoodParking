<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.ReserveActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right"/>

                <TextView
                    android:layout_marginRight="19dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예약"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/datepicker"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calender"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/res_datetxt"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="날짜 선택"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/res_up"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/up"/>

                <ImageView
                    android:id="@+id/res_down"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down"/>
            </LinearLayout>


            <CalendarView
                android:maxDate="11/18/2022"
                android:layout_gravity="center"
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                />


            <View
                android:background="#B8B7B7"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/timepick"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/res_timetxt"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="시간 선택"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/res_up2"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/up"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/res_down2"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/res_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오전"/>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/order1000"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:00"/>

                    <android.widget.Button
                        android:id="@+id/order1030"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:30"/>
                    <android.widget.Button
                        android:id="@+id/order1100"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11:00"/>
                    <android.widget.Button
                        android:id="@+id/order1130"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11:30"/>
                </LinearLayout>


                <TextView
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후"/>


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/order1200"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:00"/>

                    <android.widget.Button
                        android:id="@+id/order1230"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:30"/>
                    <android.widget.Button
                        android:id="@+id/order0100"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01:00"/>
                    <android.widget.Button
                        android:id="@+id/order0130"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01:30"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/order0200"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="02:00"/>

                    <android.widget.Button
                        android:id="@+id/order0230"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="02:30"/>
                    <android.widget.Button
                        android:id="@+id/order0300"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="03:00"/>
                    <android.widget.Button
                        android:id="@+id/order0330"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="03:30"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/order0400"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04:00"/>

                    <android.widget.Button
                        android:id="@+id/order0430"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04:30"/>
                    <android.widget.Button
                        android:id="@+id/order0500"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05:00"/>
                    <android.widget.Button
                        android:id="@+id/order0530"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05:30"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#B8B7B7"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/member"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/member"/>
                <TextView
                    android:id="@+id/order_human"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="인원수"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/res_up3"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/up"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/res_down3"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.widget.Button
                        android:id="@+id/pe2"
                        android:textSize="18dp"
                        android:text="2인"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <android.widget.Button
                        android:id="@+id/pe4"
                        android:textSize="18dp"
                        android:text="4인"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.widget.Button
                        android:id="@+id/pe3"
                        android:textSize="18dp"
                        android:text="3인"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <android.widget.Button
                        android:id="@+id/pe5"
                        android:textSize="18dp"
                        android:text="5인"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/click_time_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/res_four"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/non_time_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4인"/>
                <TextView
                    android:visibility="gone"
                    android:textColor="#fff"
                    android:id="@+id/res_four2"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/select_time_shpae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4인"/>


                <TextView
                    android:id="@+id/res_seven"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/non_time_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7인"/>


                <TextView
                    android:id="@+id/res_seven2"
                    android:visibility="gone"
                    android:textColor="#fff"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/select_time_shpae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7인"/>

            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#B8B7B7"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
        </LinearLayout> <!-- 스크롤 안쪽 큰 리니어!-->


    </ScrollView>

    <Button
        android:textSize="18dp"
        android:id="@+id/btn_modify"
        android:layout_margin="15dp"
        android:backgroundTint="#F25C05"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="예약하기"/>

</LinearLayout>